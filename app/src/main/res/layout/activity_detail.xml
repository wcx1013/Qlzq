<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:id="@+id/fl_root">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="46dp">

        <FrameLayout
            android:id="@+id/fl_back"
            android:layout_width="46dp"
            android:layout_height="46dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/ic_arrow_left_black" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="标题"
            android:textColor="@color/color_0D0D0D"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_already_learn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="57dp"
            android:src="@mipmap/ic_no_already_learn" />

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="20dp"
            android:src="@mipmap/ic_share" />
    </FrameLayout>

    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:layout_marginTop="46dp"
        android:background="@mipmap/bg_detail_original_text"/>

    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="231dp"
        android:layout_marginBottom="80dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_original_text"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="40dp"
            android:background="@drawable/selector_oval_nor_gray_pre_e9533a"
            android:gravity="center"
            android:text="原文"
            android:textColor="@color/selector_nor_black_pre_white"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_translation_text"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/selector_oval_nor_gray_pre_e9533a"
            android:gravity="center"
            android:text="译文"
            android:textColor="@color/selector_nor_black_pre_white"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_appreciation"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="40dp"
            android:layout_weight="1"
            android:background="@drawable/selector_oval_nor_gray_pre_e9533a"
            android:gravity="center"
            android:text="赏析"
            android:textColor="@color/selector_nor_black_pre_white"
            android:textSize="17sp" />
    </FrameLayout>
</FrameLayout>