<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_login"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="298dp"
        android:layout_height="410dp"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="158dp"
        android:layout_marginRight="31dp"
        android:background="@drawable/shape_radius_10_bg_white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="欢迎使用"
            android:textSize="22sp"
            android:textColor="@color/text_23"
            android:layout_marginTop="48dp"/>

        <TextView
            android:layout_width="154dp"
            android:layout_height="wrap_content"
            android:text="小学必备古诗词150首全集"
            android:textSize="22sp"
            android:gravity="center"
            android:textColor="@color/text_23"
            android:layout_marginTop="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <LinearLayout
                android:id="@+id/ll_ty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_select"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitXY"
                    android:src="@drawable/click_item_sel" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:text="同意"
                    android:textColor="@color/text_D4"
                    android:textSize="11dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_yhxy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《用户许可协议》"
                android:textColor="@color/color_3B3B3B"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/tv_yszy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《隐私保护指引》"
                android:textColor="@color/color_3B3B3B"
                android:textSize="11dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/wx_login"
            android:layout_width="231dp"
            android:layout_height="44dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:background="@drawable/shape_radius_5_bg_4428"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_login_wx" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="微信登录"
                android:textColor="@color/white"
                android:textSize="17dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/qq_login"
            android:layout_width="231dp"
            android:layout_height="44dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_radius_5_bg_8c2c"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_login_qq" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="QQ登录"
                android:textColor="@color/white"
                android:textSize="17dp" />
        </LinearLayout>
    </LinearLayout>


    <com.juguo.gushici.view.XCRoundImageView
        android:id="@+id/img_user"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="110dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_user_img" />
</FrameLayout>