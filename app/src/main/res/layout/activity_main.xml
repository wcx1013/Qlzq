<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_home"
            android:orientation="vertical">

            <!--TopMenu-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_home_mine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="75dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <com.juguo.gushici.view.XCRoundImageView
                        android:id="@+id/img_user"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_marginBottom="5dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_user_place" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的"
                        android:textColor="@color/color_332216"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_home_learn_report"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_learn_report"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_marginBottom="5dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_learn_report" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/learn_report"
                        android:textColor="@color/color_332216"
                        android:textSize="14sp" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_home_learn_plan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_learn_plan"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_marginBottom="5dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_learn_plan" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/learn_plan"
                        android:textColor="@color/color_332216"
                        android:textSize="14sp" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_home_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_search"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_marginBottom="5dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_home_search" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/search"
                        android:textColor="@color/color_332216"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!--爱学Class1-Class6-->
            <ImageView
                android:id="@+id/iv_home_class1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@mipmap/bg_home_class_1" />

            <ImageView
                android:id="@+id/iv_home_class2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/bg_home_class_2" />

            <ImageView
                android:id="@+id/iv_home_class3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/bg_home_class_3" />

            <ImageView
                android:id="@+id/iv_home_class4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/bg_home_class_4" />

            <ImageView
                android:id="@+id/iv_home_class5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/bg_home_class_5" />

            <ImageView
                android:id="@+id/iv_home_class6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/bg_home_class_6" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>